<!DOCTYPE html>
<html>
  <head>
    <title>INFS 740 Healthcare</title>
      <h1>Disease Recommender System</h1>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.jsdelivr.net/npm/frappe-charts@1.1.0/dist/frappe-charts.min.iife.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function(event) {
        const data = {
          labels: [<%- trends.map(t => `"${t.formattedAxisTime}"`) %>],
          datasets: [
            {
              name: "<%= symptoms %>", type: "line",
              values: [<%= trends.map(t => t.formattedValue[0]) %>]
            }
          ]
        }

        const chart = new frappe.Chart("#chart", {
          title: "Google Trends for <%= symptoms %> over Time",
          data: data,
          type: 'line',
          lineOptions: {
            heatline: 1,
            regionFill: 1
          },
          height: 250,
          colors: ['#7cd6fd']
        });
      });
    </script>
  </head>
  <body>

    <div id="hc-Container">
<div class="hc-Banner">
<ul class="menu">
    <li class="link1">
      <a href="/" class="hyperlink"><span>Home</span></a>
    </li>
    <li class="link1">
      <a href="/about" class="hyperlink">About Us</a>
    </li>
    <li class="link1">
      <a href="/help" class="hyperlink">Help</a>
    </li>


  </ul>
</div>
<div class="hc-Form-heading">
      <% if (diagnosis.length > 0) { %>
        <p>
          We think you Have
          <ul>
          <% diagnosis.forEach((d) => { %>
            <li><%= d %></li>
          <% }); %>
          </ul>
        </p>
        <p>
          <a href="/treatments?specialists=<%= specialists %>">
            View recommended specialists in your area
          </a>
        </p>
      <% } else { %>
        <p>We didn't find any matches</p>
      <% } %>
      <div>
        <div id="chart"></div>
        <div>
          <%= JSON.stringify(trends.default) %>
        </div>
      </div>
      <br />
      <a href='/'>Try again</a>
	  </div>
	        <p>
        <a href="https://www2.gmu.edu/">
          <img src = "/images/mason-logo-green.png" class="img" alt = "Contact Page" />
        </a>
      </p>
    </div>
  </body>
</html>
